<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title - The Photo Gallery</title>
    @Styles.Render("~/Content/css")
    <link href="~/layout/styles/layout.css" rel="stylesheet" type="text/css" media="all">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body id="top">
    <!-- ################################################################################################ -->
    <div class="wrapper row0" style="background: #394251;">
        <div id="topbar" class="hoc clear">
            <div class="fl_right">
                <ul class="nospace inline pushright">
                    <li>
                        <span class="fa fa-user"></span>
                        <strong>@Html.ActionLink("Register", "Register", "Account")</strong>
                    </li>
                    <li>
                        <span class="fa fa-sign-in"></span>
                        <strong>@Html.ActionLink("Login", "Login", "Account")</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- ################################################################################################ -->
    <div class="wrapper row1">
        <header id="header" class="hoc clear">
            <div id="logo" class="text-center">
                <div class="nospace inline pushright">
                    <img class="img-responsive" src="~/images/gallery.png" alt="The Photo Gallery Logo" title="The Photo Gallery" style="width: 30%; max-width: 100px;"/>
                    <h1>@Html.ActionLink("The Photo Gallery", "Index", "Home")</h1>
                </div>
            </div>
        </header>
    </div>
    <!-- ################################################################################################ -->
    <div class="wrapper row2">
        <nav id="mainav" class="hoc clear">
            <ul class="clear">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Gallery", "AllAlbums", "Album")</li>
                <li>@Html.ActionLink("New Album", "CreateAlbum", "Album")</li>
            </ul>
        </nav>
    </div>
    <!-- ################################################################################################ -->
    <div class="wrapper row3">
        <main class="hoc container clear">
            <!-- main body -->
            @RenderBody()
            <!-- / main body -->
            <div class="clear"></div>
        </main>
    </div>
    <!-- ################################################################################################ -->
    <div class="wrapper row5">
        <div id="copyright" class="hoc clear">
            <p class="fl_left">&copy; @DateTime.Now.Year - All Rights Reserved - @Html.ActionLink("The Photo Gallery", "Index", "Home")</p>
            <p class="fl_right">Design by <a target="_blank" href="http://www.os-templates.com/" title="Free Website Templates">OS Templates</a></p>
        </div>
    </div>
    <!-- ################################################################################################ -->
    <a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>

    <script src="~/layout/scripts/jquery.backtotop.js"></script>
    <script src="~/layout/scripts/jquery.mobilemenu.js"></script>
    <!-- IE9 Placeholder Support -->
    <script src="~/layout/scripts/jquery.placeholder.min.js"></script>
    <!-- / IE9 Placeholder Support -->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
